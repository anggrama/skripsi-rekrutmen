        string SavePostedFile(UploadedFile uploadedFile,string savedFilename)
        {
            if (!uploadedFile.IsValid)
                return string.Empty;

            string fileName = Path.Combine(MapPath("~/Admin/Upload/Nilai/"), savedFilename);
            uploadedFile.SaveAs(fileName);

            return fileName;
            
